                                <i class="fa fa-print"></i>
                                <span> Print</span>
                            </a>
                            <a href="@Url.Action("UserReport", "Admin")" class="btn btn-primary dropdown-toggle btn-invoice-primary"><i class="fa fa-reply"></i><span>Back</span></a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script>
        $('#myTab1 li:first').addClass('active');
        function divPrint() {
            window.print();
        }
    </script>
}
