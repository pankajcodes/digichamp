@{
    ViewBag.Title = "View Tablet";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-content-wrap">
    <div class="page-title">
        <div>
            <h1>
                <i class="fa fa-cubes"></i> Tablet
                <div class="btn-toolbar pull-right">
                    <div class="box-tool">
                        <a class="btn btn-primary show-tooltip" href="/Admin/PackageCreate" data-toggle="tooltip" data-placement="top" title="Packages"><span>P</span></a>
                        <a class="btn btn-primary show-tooltip" href="/Admin/ViewModule" data-toggle="tooltip" data-placement="top" title="Module"><span>M</span></a>
                    </div>
                </div>
            </h1>

        </div>
    </div>
    <div id="breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="~/Admin/AdminDashboard">Home</a>
                <span class="divider"><i class="fa fa-angle-right"></i></span>
            </li>
            @if (ViewBag.Breadcrumb != null)
            {
                <li class="active">@ViewBag.Breadcrumb</li>
            }
        </ul>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-title">

                    <h3><i class="fa fa-cubes"></i>Tablet Details</h3>
                    <div class="box-tool box-tooll">
                        <a href="/Admin/CreateTablet" class="btn btn-primary"><i class="fa fa-plus"></i> <span>Add New</span></a>
                    </div>
                </div>
                
                

                <div class="box-content">
                    <div class="table-responsive voffset3">
                        <table class="table table-advance" id="table1">

                            <thead>
                                <tr>
                                    <th>Sl No.</th>
                                    <td>Tablet Name</td>
                                    <td>Tablet Price</td>
                                    <td>period</td>
                                    
                                    <th style="width: 20%;">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int i = 0;
                                }
                                @if (ViewBag.Tabletdtls != null)
                                {
                                    foreach (var v in ViewBag.Tabletdtls)
                                    {
                                        <tr>
                                            <td>@(i += 1)</td>
                                            <td>@v.Tablet_Name</td>
                                            <td>@{decimal price = Decimal.Round(Convert.ToDecimal(v.Tablet_Price), 2);}
                                                @price</td>
                                            <td>@v.Subscription_Period</td>

                                            @*<td>@v.Module_Content</td>*@
                                            <td>
                                                @Html.ActionLink(" ", "CreateTablet", "Admin", new { id = @v.Tablet_Id }, new { @class = "btn btn-sm btn-primary show-tooltip fa fa-edit", @title = "Edit" })
                                                @* </span>*@
                                                @*<span class="btn btn-circle btn-bordered thick btn-danger" onclick="return confirm('Are you sure want to delete the module?')">*@
                                                @Html.ActionLink(" ", "Delete_Tablet", "Admin", new { id = @v.Tablet_Id }, new { @class = "btn btn-sm btn-danger show-tooltip fa fa-trash-o", @onclick = "return confirm('Are you sure want to delete the module?')", @data_original_title = "Delete", @title = "Delete" })
                                                @*</span>*@
                                            </td>

                                        </tr>
                                    }

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
