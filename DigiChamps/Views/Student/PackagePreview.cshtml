@section scripts
{
    <script>

        $(function () {
            var owl = $('.owl-carousel').owlCarousel({
                loop: true,
                margin: 17,
                responsiveClass: true,
                responsive: {
                    0: {
                        items: 1,
                        nav: true
                    },
                    600: {
                        items: 4,
                        nav: false
                    },
                    1000: {
                        items: 4,
                        nav: false,
                        loop: true
                    }
                }
            });
            $('.pkg-prev-btn').click(function () {
                owl.trigger('prev.owl.carousel');
            });
            $('.pkg-next-btn').click(function () {
                owl.trigger('next.owl.carousel');
            });
        });

    </script>
