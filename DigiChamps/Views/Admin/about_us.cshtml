@{
    ViewBag.Title = "About Us";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-content-wrap">
    <div class="page-title">
        <div>
            <h1>
                <i class="fa fa-graduation-cap"></i> About Us

            </h1>

        </div>
    </div>
    <div id="breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="~/Admin/AdminDashboard">Home</a>
                <span class="divider"><i class="fa fa-angle-right"></i></span>
            </li>
            @if (ViewBag.Breadcrumb != null)
                {
                    <li class="active">@ViewBag.Breadcrumb</li>
                }
        </ul>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="box">

                <div class="box-title">
                    <h3><i class="fa fa-file-text"></i>About Us Details</h3>
                    <div class="box-tool box-tooll">
                        <a href="/Admin/addaboutus" class="btn btn-primary"><i class="fa fa-plus"></i><span> Add New</span> </a>
                    </div>
                </div>
                <div class="box-content">

                    <div class="table-responsive voffset3">
                        <table class="table table-advance" id="table1">

                            <thead>
                                <tr>
                                    <th>Sl No.</th>
                                    @*<th hidden="hidden">Id</th>*@
                                    <th>About Us</th>
                                

                                    <th style="width: 10%;">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.about != null)
                                {
                                    int rowNo = 0;
                                    foreach (var item in ViewBag.about)
                                    {
                                        <tr>
                                            <td>@(rowNo += 1)</td>
                                            <td hidden="hidden">@item.About_ID</td>
                                         
                                            <td>@item.Aboutus</td>


                                            <td>

                                                @Html.ActionLink(" ", "addaboutus", "Admin", new { id = @item.About_ID }, new { @class = "btn btn-sm btn-primary show-tooltip fa fa-edit", @title = "Edit" })


                                                @Html.ActionLink(" ", "Deleteabout", "Admin", new { id = @item.About_ID }, new { @class = "btn btn-sm btn-danger show-tooltip fa fa-trash-o", @onclick = "return confirm('Are you sure want to delete the about us?')", @data_original_title = "Delete", @title = "Delete" })

                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
