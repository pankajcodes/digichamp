@model IEnumerable<DigiChamps.Models.SchoolModel.HomeWorkModel>

@{
    ViewBag.Title = "GetSchoolAdminList";
    Layout = "~/Views/Shared/_SchoolLayout.cshtml";
}

<form class="form-horizontal" id="validation-form">




    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-title">
                    <h3><i class="fa fa-file"></i> HomeWork List </h3>
                    <div class="box-tool box-tooll">
                        <a class="btn btn-primary" href="/School/CreateOrEditHomeWork/"><i class="fa fa-plus"></i><span> Add HomeWork</span></a>
                    </div>
                </div>
                <div class="box-content">
                    <div class="table-responsive">
                        <table class="table table-advance" id="table1">

                            <thead>
                                <tr>
                                    <th>S No.</th>
                                    <th> Class </th>
                                    <th> Subject </th>
                                    <th> HomeWork </th>
                                    <th> Date </th>
                                    <th> TimeSlot </th>
                                    <th style="display:none;">SchoolId</th>
                                    <th style="display:none;">HomeWorkId</th>
                                    
                                    
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    int rowNo = 0;
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@(rowNo += 1)</td>
                                            <td>@item.ClassName</td>
                                            <td>@item.SubjectName</td>
                                            <td>@item.Description</td>
                                            <td> @item.Date </td>
                                            <td> @item.TimeSlot </td>
                                            <td style="display:none;">@item.SchoolId</td>
                                            <td style="display:none;">@item.Id</td>
                                            @*<td>@item.EmailAddress</td>
                                            <td>@item.Password</td>*@
                                            <td>
                                                @Html.ActionLink(" ", "SchoolDashBoard", "School", new { id = @item.SchoolId }, new { @class = "btn btn-sm btn-primary fa fa-pencil", @title = "View" })
                                                @Html.ActionLink(" ", "DeleteHomeWork", "School", new { id = @item.Id }, new { @class = "btn btn-sm btn-danger show-tooltip fa fa-trash-o", @onclick = "return confirm('Are you sure want to delete the role type?')", @data_original_title = "Delete", @title = "Delete" })


                                            </td>
                                        </tr>
                                    }
                                }


                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>

</form>
<script>

    function Delete(id) {
        debugger
        $(".loader-ajax-container").css("display", "block");
        $.ajax({
            type: 'POST',
            url: "/School/DeleteHomeWork",
            contentType: false, // Not to set any content header
            processData: false,
            data: id,
            success: function (data) {
                $(".loader-ajax-container").css("display", "none");
                console.log(data.Data);
                if (data.Data)
                    window.location.reload();
            }
        });

    }
</script>