@{
    ViewBag.Title = "About Us";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("addaboutus", "Admin", FormMethod.Post, new { @class = "form-horizontal", id = "validation-form" }))
{
    <div class="page-content-wrap">
        <div id="breadcrumbs">
            <ul class="breadcrumb">
                <li>
                    <i class="fa fa-home"></i>
                    <a href="~/Admin/AdminDashboard">Home</a>
                    <span class="divider"><i class="fa fa-angle-right"></i></span>
                </li>
                @if (ViewBag.Breadcrumb != null)
                {
                    <li class="active">@ViewBag.Breadcrumb</li>
                }
            </ul>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-title">
                        <h3>
                            <i class="fa fa-file"></i>Add About Us
                        </h3>
                    </div>

                    <div class="box-content">
                        <form action="#" class="form-horizontal form-bordered form-row-stripped">
                            <div class="form-group">
                                <label for="textfield5" class="col-sm-3 col-lg-2 control-label">About Us<span class="asterisk">*</span></label>
                                <div class="col-sm-9 col-lg-7 controls">
                                    @if (ViewBag.id != null)
                                    {
                                        <textarea class="form-control" id="about" name="about">@ViewBag.about</textarea>
                                    }
                                    else
                                    {
                                        <textarea class="form-control" data-rule-required="true" data-msg-required="Please enter about us" id="about" name="about"></textarea>
                                    }

                                    @*<input type="text" class="form-control" date-rule-required="true" data-msg-required="Enter about us" id="about" name="about"   />*@
                                    <input type="hidden" id="faqs_id" name="hid" value="@ViewBag.id" />
                                </div>
                            </div>
                            


                            <div class="form-group last box-tooll">
                                <div class="col-sm-9 col-sm-offset-3 col-lg-7 col-lg-offset-2">
                                    <a href="@Url.Action("about_us", "Admin")" class="btn btn-primary"><i class="fa fa-undo"></i><span>Back</span>  </a>
                                    <button id="btnadd" type="submit" class="btn btn-primary btn-success"><i class="fa fa-check green-i"></i><span>Submit</span> </button>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>

    </div>
}
