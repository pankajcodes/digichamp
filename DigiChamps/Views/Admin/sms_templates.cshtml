@model IEnumerable<DigiChamps.Models.View_DC_SMS_API>
@{
    ViewBag.Title = "SMS Templates";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-content-wrap">
    <div class="page-title">
        <div>
            <h1>
                <i class="fa fa-file-o"></i> SMS
                <div class="btn-toolbar pull-right">
                    <div class="box-tool">
                        <a class="btn btn-primary show-tooltip" href="/Admin/View_Smsapi" data-toggle="tooltip" data-placement="top" title="Sms API"><span>S</span></a>
                    </div>
                </div>
            </h1>

        </div>
    </div>
    <div id="breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="~/Admin/AdminDashboard">Home</a>
                <span class="divider"><i class="fa fa-angle-right"></i></span>
            </li>
            @if (ViewBag.Breadcrumb != null)
            {
                <li class="active">@ViewBag.Breadcrumb</li>
            }
        </ul>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-title">
                    <h3><i class="fa fa-file-text"></i>Sms template</h3>
                    <div class="box-tool box-tooll">
                        <a href="/Admin/SMSTemplate_Details" class="btn btn-primary"><i class="fa fa-plus"></i><span> Add New</span></a>
                    </div>
                </div>

                <div class="box-content">
                    <div class="table-responsive voffset3">
                        <table class="table table-advance" id="table1">
                            <thead>
                                <tr>
                                    <th>Sl No.</th>
                                    <th>API Name</th>
                                    <th>Sms Alert Name</th>
                                    <th>Sms Body</th>
                                    <th style="width: 20%;">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{   int i = 1;}
                                @if (Model != null)
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.Raw(i++)</td>
                                            <td>@item.Api_Name</td>
                                            <td>@item.Sms_Alert_Name</td>
                                            <td>@item.Sms_Body</td>
                                            <td>

                                                @Html.ActionLink(" ", "SMSTemplate_Details", "Admin", new { id = @item.Sms_Id }, new { @class = "btn btn-sm btn-primary show-tooltip fa fa-edit", @title = "Edit" })

                                                @Html.ActionLink(" ", "delete_Smstemplate", "Admin", new { id = @item.Sms_Id }, new { @class = "btn btn-sm btn-danger show-tooltip fa fa-trash-o", @onclick = "return confirm('Are you sure want to delete the API?')", @data_original_title = "Delete", @title = "Delete" })

                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>

                    </div>

                </div>
            </div>

        </div>
    </div>
</div>


