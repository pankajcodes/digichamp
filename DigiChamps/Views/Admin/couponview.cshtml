

<style type="text/css">
    @@media print {
        .btn, .close, #btnprint, .no_display, ViewBag.Title {
            display: none;
        }
    }
</style>
<html>
<head>
    <title>The Digichamps</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='http://fonts.googleapis.com/css?family=Lato:400,700' rel='stylesheet' type='text/css'>
    <style>
        .main-box {
            padding: 5px;
            position: relative;
            width: 800px;
            height: 300px;
            margin: 0 auto;
            font-family: 'Lato', sans-serif;
        }

        .colorwhite {
            color: #fff;
            font-weight: bold;
        }

        .border-div {
            width: 800px;
            height: 330px;
            border: 2px dotted #7bd3ef;
            margin: 0 auto;
            background: url(../Images/coupon-bg.png);
            padding: 15px;
            position:relative;
            overflow:hidden
        }

        .cut {
            position: absolute;
            right: -33px;
            top: -2px;
        }
        .border-div-inner{position:relative;z-index:10}
        .border-div img {
            width: 150px;
        }

        .border-div .back_image{
            position:absolute;
            left:0;
            top:0;
            width:100%;
            height:100%;
        }

        .border-div p {
            margin: 0;
        }

        .text-center {
            text-align: center;
        }

        p {
            font-size: 18px;
        }

        .pc {
            color: #ff8187;
            font-size: 24px;
            line-height: 36px;
            color: #fff;
        }

        .dis {
            color: #4dc3e9;
            font-size: 40px;
            margin-top: 13px !important;
            background: #f5f5f5;
            padding: 15px;
        }

        p span {
            color: #00cc2e;
        }

        .colorred {
            color: #fb6c73;
            font-size: 14px;
            width: 50%;
            float: left;
        }

        .color-green {
            color: #000;
            font-size: 14px;
        }

        .text-right {
            text-align: right;
        }

        .cir {
            color: #fb6c73;
            font-size: 40px;
            text-align: center;
        }

        .middle {
            position: absolute;
            transform: translate(-50%,-50%);
            left: 50%;
            top: 50%;
        }

        .mright-15 {
            margin-right: 15px;
        }

        .mtop20 {
            margin-top: 40px !important;
        }

        .print {
            position: absolute;
            right: 0;
            top: 30px;
            z-index:100
        }


    </style>
</head>
<body>
    <div class="main-box">

        <a href="#" class="btn btn-link print" id="btnprint" onclick="window.print();">
            <i class="fa fa-lg fa-print"></i> Print Coupon
        </a>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;       </button>
        <div class="border-div" style="-webkit-print-color-adjust: exact !important;">
            <img class="back_image" src="../Images/coupon-bg.png" />
            <div class="border-div-inner">
            
            <p><img src="~/Images/Digichamps_logo.png" /></p>
            <div class="cir">
                @if (ViewBag.percent != null)
                {

                    <span class="number">@ViewBag.percent%</span>
                    @*<span class="cents"><sup>@ViewBag.percent</sup></span>*@
                }
                @if (ViewBag.price != null)
                {
                    <span class="usd"><sup>Rs</sup></span>
                    <span class="number">@ViewBag.price</span>
                }
            </div>
            <p class="dis text-center">Use Promo Code <span>@ViewBag.couponcode</span></p>
            <p class="mright-15 colorred mtop20">Expires On: @Convert.ToDateTime(ViewBag.expire).ToShortDateString()</p>
            <p class="mright-15 text-right colorred mtop20">*<span class="color-green">Condition Apply</span></p>
            </div>
        </div>
    </div>
</body>
</html>

