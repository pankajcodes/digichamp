<script>

    $('#validation-form1').submit(function (e) {
        $.noty.closeAll();
        e.preventDefault();
        if ($(this).valid()) {
            $(".loader-ajax-container").css("display", "block");
            $.ajax({
                type: 'POST',
                url: "/Parent/Index",
                data: $(this).serialize(),
                success: function (data) {
                    if (data == "1") {
                        generate('top', 'success', "Successfully logged in.");
                        location.href = "/Parent/ParentDashboard";
                        $.noty.closeAll();
                    }
                    else if (data == "-1") {
                        generate('top', 'warning', "Invalid username or password.");
                        $.noty.closeAll();
                    }
                    else if (data == -3) {
                        generate('top', 'warning', "Oops!! wrong password.");
                        $.noty.closeAll();
                    }
                    else {
                        $.noty.closeAll();
                        generate('top', 'warning', data);
                    }
                    setTimeout(function () {
                        $(".loader-ajax-container").css("display", "none");
                    }, 1800);
                }
            });
        }
        else {
            return false;
        }
    });
    $('#validation-form2').submit(function (e) {
        $.noty.closeAll();
        e.preventDefault();
        if ($(this).valid()) {
            $(".loader-ajax-container").css("display", "block");
            $.ajax({
                type: 'POST',
                url: "/Parent/ForgotPassword",
                data: $(this).serialize(),
                success: function (data) {
                    if (data == "1") {
                        $('#forgot').modal('hide');
                        generate('top', 'success', "OTP successfully sent to your mobile number.");
                        setTimeout(function () {
                            $('#confirm').modal('show');
                        }, 3000);
                    }
                    else if (data == "0") {
                        $(".modal-body").find("span.help-block").html("Mobile number is not yet registered");
                        //generate('top', 'warning', "Mobile number is not yet registered.");
                    }
                    else if (data == "-2") {
                        $(".modal-body").find("span.help-block").html("You have already requested for Maximum no of OTP.");
                        //generate('top', 'warning', "Mobile number is not yet registered.");
                    }
                    else if (data == "-1") {
                        $(".modal-body").find("span.help-block").html("Something went wrong");
                    }
                    setTimeout(function () {
                        $(".loader-ajax-container").css("display", "none");
                    }, 2000);
                }
            });
        }
    });
    $('#validation-form3').submit(function (e) {
        $('.alert').hide();
        $.noty.closeAll();
        e.preventDefault();
        if ($(this).valid()) {
            $(".loader-ajax-container").css("display", "block");
            $.ajax({
                type: 'POST',
                url: "/Parent/OTP_Confirmation",
                data: $(this).serialize(),
                success: function (data) {
                    if (data == "1") {
                        generate('top', 'success', "OTP confirmed successfully, Now you can login.");
                        setTimeout(function () {
                            $('#confirm').modal('hide');
                        }, 3000);
                    }
                    else if (data == "0") {
                        $('#spn').html("New password and confirm password does not match.");
                        $('.alert').show();
                    }
                    else if (data == "-2") {
                        $('#spn').html("OTP has been expired.");
                        $('.alert').show();
                    }
                    else if (data == "-1") {
                        $('#spn').html("Invalid User Details.");
                        $('.alert').show();
                    }
                    else if (data == "-11") {
                        $('#spn').html("Invalid OTP Details, Please try again.");
                        $('.alert').show();
                    }
                    setTimeout(function () {
                        $(".loader-ajax-container").css("display", "none");
                    }, 2000);
                }
            });
        }
    });


</script>