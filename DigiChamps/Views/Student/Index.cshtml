@section scripts
{
    <script>
        



    $('#tour').click(function (e) {
       

        e.preventDefault();
        if ($(this).valid()) {
            $(".loader-ajax-container").css("display", "block");
            $.ajax({
                type: 'POST',
                url: "/Student/letsbegin",
                data: $('#mobno').serialize(),

                success: function (data)  {
             
                    if (data == "1") {
                        $(".l-popup").show();
                        var mobile = $("#mobno").val();
                        $('#log_mob').val(mobile);
                        $('.group').addClass("group filled-in");

                    }
                    else if (data == "0") {
                        generate('top', 'error', "Invalid user details.");
                    }

                    else if (data == "2") {
                        $(".s-popup").show();
                        var mobile = $("#mobno").val();
                        $('#sign_mob').val(mobile);
                        $('.group').addClass("group filled-in");

                    }

                    setTimeout(function () {
                        $(".loader-ajax-container").css("display", "none");
                        //$.noty.closeAll();
                    }, 2000);
                }
            });
        }
    });

    $("#mobno").on("blur", function () {
        
        var mobNum = $(this).val();
        var filter = /^\d*(?:\.\d{1,2})?$/;

        if (filter.test(mobNum)) {
            if (mobNum.length == 10) {

                $("#mobile-valid").removeClass("hidden");
                $("#folio-invalid").addClass("hidden");
                $('#msg').hide();
            } else {
                $('#msg').text('Please put 10  digit mobile number');
                // alert('Please put 10  digit mobile number');
                $("#mobno").val("");
                $("#folio-invalid").removeClass("hidden");
                $("#mobile-valid").addClass("hidden");
                return false;
            }
        }
        else {
            $('#msg').text('Not a valid number');
            //alert('Not a valid mobile number');
            $("#mobno").val("");
            $("#folio-invalid").removeClass("hidden");
            $("#mobile-valid").addClass("hidden");
            return false;
        }

    });
    </script>
}

