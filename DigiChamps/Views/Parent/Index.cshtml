<body>
    <div class="loader-ajax-container">
        <div class="cssload-container">
            <div class="cssload-loading"><i></i><i></i><i></i><i></i></div>
        </div>
    </div>
    <form id="validation-form1">
        <div class="flip-container">
            <div class="flipper">
                <div class="front">
                    <!-- front content -->
                    <div class="holder">
                        <h1 class="heading">Login</h1>
                        <input class="form-control" type="text" placeholder="Username" id="Username" name="Username" data-rule-required="true" data-msg-required="Please enter username">
                        <input type="password" class="form-control" placeholder="Password" id="password" name="password" data-rule-required="true" data-msg-required="Please enter password">
                        <div class="bottom_info">
                            <a href="#" class="goto-forgot pull-left" data-toggle="modal" data-target="#forgot">forgot password?</a>
                        </div>
